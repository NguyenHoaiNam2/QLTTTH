
@{
    ViewData["Title"] = "Login";
}

@model Login_ViewModel

<style>
    body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: right;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-color: #f2f2f2;
    }

    .form-container {
        width: 300px;
        padding: 20px;
        border: 1px solid #ccc;
        margin-right: 100px;
        background-color: white;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        text-align: left;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    input[type=text], input[type=password] {
        width: calc(100% - 24px);
        padding: 12px;
        margin-top: 8px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    button {
        background-color: #800080;
        color: white;
        padding: 14px;
        border: none;
        cursor: pointer;
        width: 100%;
        border-radius: 5px;
    }

    button:hover {
        opacity: 0.8;
    }

    p {
        text-align: center;
        margin-top: 20px;
    }

    /* Thông báo lỗi màu đỏ */
    .text-danger {
        color: red;
    }
</style>


<form action="@Url.Action("Login", "Account")" method="post">
    @Html.AntiForgeryToken()

    <div class="form-container">
        <h2>Đăng nhập</h2>

        <div class="form-group">
            @Html.LabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <!-- Hiển thị thông báo lỗi chung -->
        @if (ViewData.ModelState.ContainsKey(string.Empty) && ViewData.ModelState[string.Empty].Errors.Count > 0)
        {
            <div class="text-danger">
                @Html.ValidationSummary(false)
            </div>
        }

        <button type="submit" class="btn btn-primary">Đăng nhập</button>

        <p>Chưa có tài khoản? <a href="@Url.Action("Register", "Account")">Đăng ký tại đây</a>.</p>
    </div>
</form>


@{
    Layout = null;
}

