@model BaiThiwed.Models.Teacher

@{
    ViewData["Title"] = "CreateTeacher";
}

<h1>Thêm giáo viên mới</h1>

<form asp-action="CreateTeacher" method="post">
    <div class="form-group">
        <label asp-for="TeacherCode" class="control-label">Mã số giáo viên</label>
        <input asp-for="TeacherCode" class="form-control" />
        <span asp-validation-for="TeacherCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Tên giáo viên</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Số điện thoại</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Subject" class="control-label">Môn học</label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JoinDate" class="control-label">Ngày gia nhập</label>
        <input asp-for="JoinDate" class="form-control" type="date" />
        <span asp-validation-for="JoinDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="TeacherIndex" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
